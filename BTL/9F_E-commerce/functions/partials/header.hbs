<div class="header">
        {{#if user}}
        <div class="top-bar">
            <div class="row">
                <ul class="col contact">
                    <li><i class="bi bi-envelope"></i>nhom9@gmail.com</li>
                    <li><i class="bi bi-telephone"></i>0123456789</li>
                </ul>
    
                <div class="col account">
                    <p style="font-size: 13px;">
                        Xin chào, 
                        <span class="account-name" style="margin-right: 12px;">{{user}}</span> |
                        <a href="/auth/logout" id="logout-btn" class="logout" style="margin-left: 12px;" onclick="logout();">Đăng xuất</a>
                    </p>
                </div>
            </div>
        </div>
        {{else}}
        <div class="top-bar">
            <div class="row">
                <ul class="col contact">
                    <li><i class="bi bi-envelope"></i>nhom9@gmail.com</li>
                    <li><i class="bi bi-telephone"></i>0123456789</li>
                </ul>
    
                <div class="col account">
                    <a href="/login" class="login">Đăng nhập</a> /
                    <a href="/signup" class="signup">Đăng ký</a>
                </div>
            </div>
        </div>
        {{/if}}   
        <div class="nav">
                <div class="logo">
                    <a href="/"><img src="./img/logo.png" alt="logo"></a>
                </div>
    
                <div class="nav-btn">
                    <a href="/">Trang chủ</a>
                    <a href="/all-products">Sản phẩm</a>
                    <a href="/contact">Liên hệ</a>
                    <a href="/about">Về Farmnine</a>
                </div>
                
                <div class="search">
                    <div class="input-group mb-3">
                        <input id="search-input" type="text" class="form-control" placeholder="Tìm kiếm" >
                        <a href="" id="search-btn" class="btn" type="button"><i class="bi bi-search" onclick="search();"></i></a>
                    </div>
                </div>
                
                <div class="cart-btn">
                    <a href="/cart"><i class="bi bi-cart3"></i></a>
                    <div class="cart-counter" id="cart-product-counter">{{len_cart}}</div>
                </div>
        </div>
        <hr>
    </div>
<script>
        function logout() {
            if (!confirm("Bạn có chắc chắn muốn đăng xuất ?")) {
                document.getElementById("logout-btn").href = "#";
            } else{
                document.getElementById("logout-btn").href = "/auth/logout";
            }
        }
        function search(){
            var input = document.getElementById("search-input").value;
            document.getElementById("search-btn").href = "/all-products?search=" + input;
        }
</script>
    