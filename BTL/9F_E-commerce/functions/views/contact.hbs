<body>
        <!-- Header -->
        {{>header user=user}}

        <!-- Page-info -->
        <div class="page-info">
            <h2 class="page-name">Liên hệ</h2>
            <p class="route">
                <a href="/">Trang chủ</a> /
                <a href="/contact">Liên hệ</a>
            </p>
        </div>

        <div class="content-container">
            <div class="contact-means">
                <h2 class="section-title">THÔNG TIN LIÊN HỆ</h2>
                <br>

                <div class="member-list row padding">
                    <div class="member-item col-12 col-md-3 col-xl-3">
                        <div class="cm-icon item-icon">
                            <i class="bi bi-telephone"></i>
                        </div>

                        <div class="cm-content">
                            <p class="member-name" style="color: black; font-weight: 1000;">Điện thoại</p>
                            <p class="member-content">0123456789</p>
                        </div>
                    </div>

                    <div class="member-item col-12 col-md-3 col-xl-3">
                        <div class="cm-icon item-icon">
                            <i class="bi bi-envelope"></i>
                        </div>

                        <div class="cm-content">
                            <p class="member-name" style="color: black; font-weight: 1000;">Email</p>
                            <p class="member-content">nhom9@gmail.com</p>
                        </div>
                    </div>

                    <div class="member-item col-12 col-md-3 col-xl-3">
                        <div class="cm-icon item-icon">
                            <i class="bi bi-geo-alt"></i>
                        </div>

                        <div class="cm-content">
                            <p class="member-name" style="color: black; font-weight: 1000;">Địa chỉ</p>
                            <p class="member-content">Đường A, Quận B, TP. C</p>
                        </div>
                        </div>
                        </div>
            </div>

            <div class="fast-contact row padding">

                <div class="contact-form col">
                    <h3>Liên hệ nhanh với chúng tôi</h3>
                    <form action="#">

                        <input type="text" id="fname" name="firstname" placeholder="Họ và tên" value="" required>
                        
                        <input type="email" id="email" name="email" placeholder="Email" value="" required>

                        <input type="text" id="phone" name="phone" placeholder="Số điện thoại" value="">


                        <textarea id="subject" name="subject" placeholder="Write something.." style="height:200px" required></textarea>

                        <button class="btn" type="submit" onclick="sendEmail();">Gửi tin nhắn</button>

                    </form>
                </div>

                <div class="fast-contact-map col">
                    <img src="./img/home/slideshow-bg.jpg" alt="pic">

