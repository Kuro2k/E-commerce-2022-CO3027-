<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="./css/product-detail.css">
    <link rel="stylesheet" href="./css/cart.css">
    <link rel="stylesheet" href="./css/header.css">
    <link rel="stylesheet" href="./css/footer.css">
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    
    <title>Giỏ hàng</title>

    <style>
        .category-container {
            margin: auto;
        }
        .product-info .product-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            max-height: 67px;
        }
    </style>
</head>
<body>
    <!-- Header -->
    {{>header user=user}}

    <!-- Page-info -->
    <div class="page-info">
        <h2 class="page-name">Giỏ hàng</h2>
        <p class="route">
            <a href="/">Trang chủ</a> /
            <a href="/cart">Giỏ hàng</a>
        </p>
    </div>

    <div class="title-section">
        <h2 class="title"><b>Giỏ hàng của bạn</b></h2> <br>
        <a href="/">Trở về mua sắm tiếp</a>
    </div>

    <div class="total-products">
        <div class="row list-heading">
            <div class="col col-md-4 name">Sản phẩm</div>
            <div class="col col-md-2">Danh mục</div>
            <div class="col col-md-2">Đơn giá</div>
            <div class="col col-md-2">Số lượng</div>
            <div class="col col-md-2">Số tiền</div>
        </div>
        <hr>
        {{#each product_list}}
        <div class="row total-product">
            <div class="col col-md-4 product-info">
                <div class="row">
                    <div class="col col-md-4 img-container">
                        <img id="product_img" class="product-img" src={{img_url}} alt={{name}}>
                    </div>
                    <div class="col col-md-8">
                        <h5 class="product-name"><b>{{name}}</b></h5>
                        <button onclick="this.parentElement.parentElement.parentElement.parentElement.remove(); calculateProduct();">Xóa</button>
                    </div>
                </div>
            </div>
            <div class="col col-md-2 category-container">Rau củ quả</div>
            <div class="col col-md-2 price-container"><span class="price">{{price}}</span>đ</div>
            <div class="col col-md-2 qty-counter">
                <div class="counter">
                    <span class="down" onClick="decreaseCount(event, this)">-</span>
                    <input id="amount" class="qty" type="text" value={{amount}}>
                    <span class="up" onClick="increaseCount(event, this)">+</span>
                </div>
            </div>
            <div class="col col-md-2 price-container"><span class="total-product-price"></span>đ</div>
            <hr>
        </div>
        {{/each}}
    </div>

    <div class="row total-cal">
        <div class="col col-md-9 calc">
            <div class="row">
                <div class="col sub-total-text"><b>Tạm tính</b></div>
                <div class="col sub-total-count"><b><span class="count-price"></span>đ</b></div>
            </div> <br>
            <p>Phí vận chuyển sẽ được tính sau</p>
        </div>

        <div class="col col-md-3 btn-container">
            <a href="/shipping" class="btn buy" onclick="updateCart();" >Mua hàng</a>
        </div>
    </div>

    {{>footer}}
    

    <script src="./js/app.js"></script>
    <script> 
        calculateProduct();

        const product_price = document.getElementsByClassName("product-price");
        const price = parseInt(product_price[0].innerText);
        const product_name = document.getElementsByClassName("product-name")[0].innerText;
        const product_amount = document.getElementById("amount").value;
        const body = JSON.stringify({
            price: price,
            img_url: product_img_url,
            name: product_name,
            amount: parseInt(product_amount)
        })
        console.log(body);
        function updateCart(){
            fetch('/updateCart', {method: 'post', body: body}).then(resp => {
            if (resp.status < 200 || resp.status >= 300)
                throw new Error("You need to login!")
            return resp.json()
            })
            .then(json => {
                alert("Thêm thành công!");
            })
            .catch(err => {
                alert("Thêm thất bại!");
            });
        };




        function increaseCount(a, b) {
            var input = b.previousElementSibling;
            var value = parseInt(input.value, 10);
            value = isNaN(value) ? 0 : value;
            value++;
            input.value = value;
            calculateProduct();
            product_amount = value;
        }
            
        function decreaseCount(a, b) {
            var input = b.nextElementSibling;
            var value = parseInt(input.value, 10);
            if (value > 1) {
                value = isNaN(value) ? 0 : value;
                value--;
                input.value = value;
            }
            calculateProduct();
            product_amount = value;
        }
    </script>
</body>
</html>