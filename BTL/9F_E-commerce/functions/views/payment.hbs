<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    
    <link rel="stylesheet" href="./css/header.css">
    <link rel="stylesheet" href="./css/footer.css"> 
    <link rel="stylesheet" href="./css/shipping.css">
    <link rel="stylesheet" href="./css/payment.css">
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <title>Farmnine - Thanh toán</title>
</head>
<body>
    {{>header user=user}}

    <div class="page-info">
        <h2 class="page-name">Thanh toán</h2>
        <p class="route">
            <a href="/">Trang chủ</a> /
            <a href="/cart">Giỏ hàng</a> /
            <a href="/shipping">Vận chuyển</a> /
            <a href="/payment">Thanh toán</a>
        </p>
    </div>

    <div class="row payment-content">
        <div class="col payment-info">
            <h6 class="title"><b>Thông tin vận chuyển</b></h6>
            <div class="info-container">
                <span><b>Tên:</b></span>
                <span class="customer-name">Nguyễn Văn A</span>
                <hr>

                <span><b>Địa chỉ:</b></span>
                <span class="customer-address">Số 123, Đường 456, Huyện ABC, Quận E, TP. Z</span>
                <br>
                <span><b>Điện thoại:</b></span>
                <span class="customer-phone">0123456789</span>
                <hr>
                
                <span><b>Phương thức:</b></span>
                <span class="customer-ship-method">Vận chuyển bình thường</span>
            </div>

            <h6 class="title"><b>Phương thức thanh toán</b></h6>
            <div class="info-container">
                <input type="radio" name="pay-method" id="cash">
                <label for="cash">Thanh toán khi nhận hàng</label>

                <!-- Các phương thức khác -->
                <hr>
                
                <input type="radio" name="pay-method" id="momo">
                <label for="momo">Thanh toán bằng ví MoMo</label>
                <hr>

                <input type="radio" name="pay-method" id="paypal">
                <label for="paypal">Thanh toán bằng Paypal</label>
                <hr>
                
                <span class="credit-card">
                    
                    <input type="radio" name="pay-method" id="card">
                    <label for="card">
                        Thanh toán bằng thẻ tín dụng <br>
                    </label>
                </span>
                {{!-- <a href="" class="btn add-card">Thêm thẻ</a>  --}}
                
            </div>

            <div class="row navigation">
                <a href="/shipping" class="col back">Trở về vận chuyển</a>
                <div class="btn-container col">
                    <a href="/thank-you" class="btn">Đặt hàng</a>
                </div>
            </div>
        </div>

        <div class="col cart-info">
            <div class="items">
                <div class="row item">
                    <p class="col col-md-1 qty">1</p>
                    <p class="col col-md-1">x</p>
                    <p class="col col-md-7 item-name">Dưa hấu</p>
                    <p class="col col-md-3 price-container"><span class="price product-price">20000</span>đ</p>
                </div>
                <hr>

                <div class="row item">
                    <p class="col col-md-1 qty">3</p>
                    <p class="col col-md-1">x</p>
                    <p class="col col-md-7 item-name">Cà chua</p>
                    <p class="col col-md-3 price-container"><span class="price product-price">10000</span>đ</p>
                </div>
                <hr>
                
                <div class="row discount-input">
                    <input type="text" class="col" placeholder="Mã giảm giá">
                    <!-- <div class="btn-container col col-md-3"> -->
                    <button class="btn col">Thêm mã</button>
                    <!-- </div> -->
                </div>
                <hr>
                <div class="total">
                    <div class="row">
                        <p class="col col-md-9">Tạm tính</p>
                        <p class="col col-md-3 price-container" style="color:black"><span class="subtotal"></span>đ</p>
                    </div>
                    <div class="row">
                        <p class="col col-md-9">Phí vận chuyển</p>
                        <p class="col col-md-3 price-container" style="color:black"><span class="price shipping-price-cal">15.000</span>đ</p>
                    </div>
                    <div class="row">
                        <p class="col col-md-9">Giảm giá</p>
                        <p class="col col-md-3 price-container" style="color:black"><span class="price discount-price">-20000</span>đ</p>
                    </div>
                    <hr>
                    
                    <div class="row">
                        <p class="col col-md-9">Tổng cộng</p>
                        <h5 class="col col-md-3 price-container" style="color:black"><span class="price total-price"></span>đ</h5>
                </div>
                    
                </div>
            </div>

        </div>
    </div>

    {{>footer}}
    <script src="./js/app.js">
    </script>

    <script>
        const qty = document.getElementsByClassName("qty");
        const product_price = document.getElementsByClassName("product-price");
        const ship_fee = document.getElementsByClassName("shipping-price-cal")[0].innerHTML.slice(0, -1);
        const discount = document.getElementsByClassName("discount-price")[0].innerHTML.slice(0, -1);
        var subtotal_count = 0;
        
        for (let i = 0; i < qty.length; i++){
            let total_ammount = parseFloat(product_price[i].innerHTML) * 1000 * parseInt(qty[i].innerHTML, 10);
            subtotal_count += total_ammount;    
        }

        const total = subtotal_count + unformatPrice(ship_fee) + unformatPrice(discount);
        document.getElementsByClassName("subtotal")[0].innerHTML = subtotal_count.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1.');
        document.getElementsByClassName("total-price")[0].innerHTML = formatOnePrice(total);
    </script>
</body>
</html>